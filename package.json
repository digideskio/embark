{
  "devDependencies": {
    "lerna": "3.10.5",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3"
  },
  "engines": {
    "node": ">=8.12.0",
    "npm": ">=6.4.1",
    "yarn": ">=1.12.3"
  },
  "name": "root",
  "private": true,
  "scripts": {
    "CI": "yarn QA_",
    "QA": "npm-run-all lint typecheck test",
    "QA_": "npm-run-all cwtree lint typecheck build cwtree test cwtree",
    "boot": "yarn install",
    "build": "yarn lruns build",
    "clean": "yarn lrunp clean",
    "cwtree": "node scripts/check-working-tree",
    "globalize": "node scripts/globalize",
    "lerna": "npx lerna",
    "lexec": "yarn lerna exec",
    "lexecp": "yarn lexec --parallel",
    "lexecs": "yarn lexec --stream",
    "lint": "yarn lrunp lint",
    "lrun": "yarn lerna run",
    "lrunp": "yarn lrun --parallel",
    "lruns": "yarn lrun --stream",
    "package": "yarn package_",
    "packageCI": "yarn packageQA_",
    "packageQA": "yarn packageQA_",
    "packageQA_": "yarn package_",
    "package_": "yarn lexec npm pack",
    "postpackageQA_": "yarn cwtree",
    "postreboot": "yarn boot",
    "postreboot_": "yarn postreboot",
    "postreset_": "npx rimraf node_modules",
    "prepackage": "yarn build",
    "prepackageCI": "yarn boot && yarn CI",
    "prepackageQA": "yarn reboot_ && yarn QA_",
    "prereset": "yarn clean",
    "reboot": "yarn reset",
    "reboot_": "yarn reset_",
    "release": "node scripts/release",
    "reset": "yarn lrunp reset",
    "reset_": "yarn reset",
    "start": "yarn lrunp start",
    "test": "yarn lruns test",
    "typecheck": "yarn lrunp typecheck"
  },
  "workspaces": ["packages/*"]
}
