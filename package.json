{
  "devDependencies": {
    "lerna": "3.10.5",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3"
  },
  "engines": {
    "node": ">=8.12.0",
    "npm": ">=6.4.1",
    "yarn": ">=1.12.3"
  },
  "name": "root",
  "private": true,
  "scripts": {
    "CI": "npm run QA_",
    "QA": "npm-run-all lint typecheck test test_dapps",
    "QA_": "npm-run-all cwtree lint typecheck build cwtree test cwtree",
    "boot": "yarn install",
    "build": "npm run lruns build",
    "clean": "npm run lrunp clean",
    "cwtree": "node scripts/check-working-tree",
    "globalize": "node scripts/globalize",
    "lerna": "npx lerna",
    "lexec": "npx lerna exec",
    "lexecp": "npx lerna exec --parallel",
    "lexecs": "npx lerna exec --stream",
    "lint": "npm run lrunp lint",
    "lrun": "npx lerna run",
    "lrunp": "npx lerna run --parallel",
    "lruns": "npx lerna run --stream",
    "package": "npm run package_",
    "packageCI": "npm run packageQA_",
    "packageQA": "npm run packageQA_",
    "packageQA_": "npm run package_",
    "package_": "npm run lexec npm pack",
    "postpackageCI": "npm run test_dappsCI",
    "postpackageQA": "npm run test_dappsQA",
    "postpackageQA_": "npm run cwtree",
    "postreboot": "npm run boot",
    "postreboot_": "npm run postreboot",
    "postreset_": "npx rimraf node_modules",
    "prepackage": "npm run build",
    "prepackageCI": "npm run boot && npm run CI",
    "prepackageQA": "npm run reboot_ && npm run QA_",
    "prereset": "npm run clean",
    "reboot": "npm run reset",
    "reboot_": "npm run reset_",
    "release": "node scripts/release",
    "reset": "npm run lrunp reset",
    "reset_": "npm run reset",
    "start": "npm run lrunp start",
    "test": "npm run lruns test",
    "test_dapps": "cd test_dapps && yarn install && npm run test",
    "test_dappsCI": "cd test_dapps && npm run testCI",
    "test_dappsQA": "cd test_dapps && npm run testQA",
    "typecheck": "npm run lrunp typecheck"
  },
  "workspaces": ["packages/*"]
}
